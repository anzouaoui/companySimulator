<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/colorBackgroundProgressBarRessource"
                android:centerColor="@color/colorBackgroundProgressBarRessource"
                android:endColor="@color/colorBackgroundProgressBarRessource"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/colorProgressBarRessource"
                    android:centerColor="@color/colorProgressBarRessource"
                    android:endColor="@color/colorProgressBarRessource"
                    />
            </shape>
        </clip>
    </item>
</layer-list>