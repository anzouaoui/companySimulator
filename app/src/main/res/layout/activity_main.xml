<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itescia.compagnysimulator.MainActivity">

    <RelativeLayout
        android:id="@+id/RelativeLayoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_maquette_ville">

        <RelativeLayout
            android:id="@+id/RelativeLayoutTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/RelativeLayoutMedaille"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/ProgressBarReputation"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_reputation"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="12dp"
                        android:indeterminate="false"
                        android:indeterminateTintMode="src_atop"
                        android:max="100"
                        android:progress="0"/>

                    <ImageView
                        android:id="@+id/ImageViewReputation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ProgressBarReputation"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        app:srcCompat="@drawable/medalicon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayoutSecurite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/RelativeLayoutMedaille"
                    android:layout_alignTop="@+id/RelativeLayoutMedaille"
                    android:layout_marginStart="21dp">

                    <ProgressBar
                        android:id="@+id/ProgressBarSecurite"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_securite"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:indeterminate="false"
                        android:indeterminateTintMode="src_atop"
                        android:max="100"
                        android:progress="0"/>

                    <ImageView
                        android:id="@+id/ImageViewSecurite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ProgressBarSecurite"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        app:srcCompat="@drawable/securityicon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayoutFormation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/RelativeLayoutSecurite"
                    android:layout_toEndOf="@+id/RelativeLayoutSecurite">

                    <ProgressBar
                        android:id="@+id/ProgressBarFormation"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_formation"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="21dp"
                        android:indeterminate="false"
                        android:indeterminateTintMode="src_atop"
                        android:max="100"
                        android:progress="0"/>

                    <ImageView
                        android:id="@+id/ImageViewFormation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/ProgressBarFormation"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="25dp"
                        app:srcCompat="@drawable/competenceicon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/RelativeLayoutFormation"
                    android:layout_toEndOf="@+id/RelativeLayoutFormation">

                    <ProgressBar
                        android:id="@+id/ProgressBarBonheur"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/custom_progress_bar_bonheur"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="21dp"
                        android:indeterminate="false"
                        android:indeterminateTintMode="src_atop"
                        android:max="100"
                        android:progress="0"/>


                    <ImageView
                        android:id="@+id/ImageViewBonheur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ProgressBarBonheur"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        app:srcCompat="@drawable/happinessicon" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutNomJoueur"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/RelativeLayoutTop"
            android:background="@color/backgroundLevel">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/RelativeLayoutButtonLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/TextViewLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="NIVEAU 10"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/RelativeLayoutShowNomJoueur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayoutButtonLevel"
                android:background="@drawable/custom_relative_layout_nom_joueur">
                <TextView
                    android:id="@+id/TextViewNomJoueur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Black Tiger"
                    android:textColor="@color/fontColor"
                    android:textSize="15sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayoutLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/RelativeLayoutEmployes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundRelativeLayoutEmployes"
                android:layout_marginTop="45dp"
                android:alpha="0.9"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/RelativeLayoutDetailEmployes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundTextView"
                    android:layout_marginBottom="20dp"
                    android:alpha="1">

                    <TextView
                        android:id="@+id/TextViewDetailEmployes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_employes"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorTextViewDetails"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayoutContentDetailEmployes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelativeLayoutDetailEmployes"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/RelativeLayoutBackButton"
                        android:layout_width="wrap_content"
                        android:layout_height="180dp">

                        <ImageButton
                            android:id="@+id/ImageButtonBackButton"
                            android:layout_marginStart="60dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/back"
                            android:layout_centerVertical="true"
                            android:background="@color/colorBackgroundRelativeLayoutEmployes"/>

                    </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RelativeLayoutEmployes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/RelativeLayoutBackButton"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="60dp">
                            <RelativeLayout
                                android:id="@+id/RelativeLayoutCommercial"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/ImageViewCommercial"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_commercial"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayoutProduction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/RelativeLayoutCommercial"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp">

                                <ImageButton
                                    android:id="@+id/ImageViewProduction"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_production"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayoutSecurite2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/RelativeLayoutProduction"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp">

                                <ImageButton
                                    android:id="@+id/ImageViewSecurite2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_securite"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayoutMarketing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/RelativeLayoutSecurite2"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp">

                                <ImageButton
                                    android:id="@+id/ImageViewMarketing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_marketing"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RelativeLayoutEmployes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/RelativeLayoutBackButton"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="60dp"
                            android:layout_below="@+id/RelativeLayoutEmployes1"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp">
                            <RelativeLayout
                                android:id="@+id/RelativeLayoutComptable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/ImageviewComptable"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_comptable"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayoutRD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/RelativeLayoutComptable"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp">

                                <ImageButton
                                    android:id="@+id/ImageViewRD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_rd"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayoutDirection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/RelativeLayoutRD"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="40dp">

                                <ImageButton
                                    android:id="@+id/ImageViewDirection"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/manwoman_direction"
                                    android:background="@color/colorBackgroundRelativeLayoutEmployes"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/RelativeLayoutRessources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:id="@+id/RelativeLayoutArgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ImageViewArgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Image argent"
                        android:src="@drawable/argent" />

                    <TextView
                        android:id="@+id/TextViewArgent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ImageViewArgent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="50dp"
                        android:text="10000"
                        android:textColor="@color/fontColor"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/RelativeLayoutHomme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ImageViewHommes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="@string/description_image_employes"
                        android:src="@drawable/workericon" />

                    <TextView
                        android:id="@+id/TextViewHomme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/ImageViewHommes"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="50dp"
                        android:text="12"
                        android:textColor="@color/fontColor"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayoutRessource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/ImageViewRessources"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Image argent"
                        android:src="@drawable/resourcesicon" />

                    <ProgressBar
                        android:id="@+id/ProgressBarRessources"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ImageViewRessources"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:indeterminateTintMode="src_atop"
                        android:max="100"
                        android:maxHeight="30dp"
                        android:maxWidth="100dp"
                        android:minHeight="30dp"
                        android:minWidth="100dp"
                        android:progress="0"
                        android:progressDrawable="@drawable/custom_progress_bar_ressources" />

                    <TextView
                        android:id="@+id/TextViewAddRessources"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/ProgressBarRessources"
                        android:text="+"
                        android:textColor="@color/fontColor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:clickable="true"
                        />
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
